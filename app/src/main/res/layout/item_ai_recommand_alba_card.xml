<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/ai_alba_card_background"
        android:layout_width="342dp"
        android:layout_height="126dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ai_alba_recommand_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        style="@style/AlbaCardView.AIRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/ai_alba_card_background"
        app:layout_constraintTop_toTopOf="@id/ai_alba_card_background"
        tools:text="(주)숭실에듀"

        />

    <TextView
        style="@style/AlbaCardView.AIRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@id/ai_alba_card_background"
        app:layout_constraintTop_toTopOf="@id/ai_alba_card_background"
        tools:text="동작구 상도동  · 1km 이내" />

    <TextView
        android:id="@+id/tv_card_gigjob_post_title"
        style="@style/AlbaCardView.AIRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="@id/ai_alba_card_background"
        app:layout_constraintTop_toTopOf="@id/ai_alba_card_background"
        tools:text="[숭실에듀/긴급] PPT 자료 제작 알바 모집" />

    <TextView
        android:id="@+id/tv_gigjob_post_timezone"
        style="@style/AlbaCardView.AIRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tv_card_gigjob_post_title"
        app:layout_constraintTop_toBottomOf="@id/tv_card_gigjob_post_title"
        tools:text="09:00 ~ 14:00 · 하루 · 11/10" />

    <TextView
        android:id="@+id/tv_pay_form"
        style="@style/AlbaCardView.AIRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/albaez_purple"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tv_gigjob_post_timezone"
        app:layout_constraintTop_toBottomOf="@id/tv_gigjob_post_timezone"
        tools:text="일급" />

    <TextView
        android:id="@+id/tv_gigjob_post_pay"
        style="@style/AlbaCardView.AIRec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/tv_pay_form"
        app:layout_constraintTop_toTopOf="@id/tv_pay_form"
        tools:text="57,720원" />
</androidx.constraintlayout.widget.ConstraintLayout>