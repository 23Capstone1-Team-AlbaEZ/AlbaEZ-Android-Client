<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/v_alba_card_banner_box"
        android:layout_width="342dp"
        android:layout_height="126dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/alba_card_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </View>

    <TextView
        android:id="@+id/tv_card_workplace_name"
        style="@style/AlbaCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        app:layout_constraintStart_toStartOf="@+id/v_alba_card_banner_box"
        app:layout_constraintTop_toTopOf="@+id/v_alba_card_banner_box"
        tools:text="테스트 사업장 명"
        />

    <TextView
        android:id="@+id/tv_card_timezone1"
        style="@style/AlbaCardView.albaTimezone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_gravity="center_horizontal"
        tools:text="월요일 | 09:00 ~ 16:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_workplace_name" />

    <TextView
        android:id="@+id/tv_card_timezone2"
        style="@style/AlbaCardView.albaTimezone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        tools:text="수요일 | 17:00 ~ 23:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_timezone1" />

    <TextView
        android:id="@+id/tv_card_timezone3"
        style="@style/AlbaCardView.albaTimezone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp"
        tools:text="금요일 | 17:00 ~ 23:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_timezone2" />

